<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.debanshu777.snapchatUIComposeClone">
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:usesCleartextTraffic="true"
        android:fullBackupOnly="true"
        android:icon="@drawable/snapchat_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/snapchat_app_logo_circle"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppSplash"
        android:allowBackup="true">
        <meta-data android:name="com.google.android.geo.API_KEY"
            android:value="${GMP_KEY}"
            />
        <activity
            android:name="com.debanshu777.snapchatUIComposeClone.common.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>